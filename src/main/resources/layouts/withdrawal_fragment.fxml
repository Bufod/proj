<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="code.controllers.WithdrawalFragmentContext">
   <children>
      <HBox alignment="TOP_CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Text pickOnBounds="true" strokeType="OUTSIDE" strokeWidth="0.0" text="Вывести со счета">
               <font>
                  <Font size="36.0" />
               </font>
            </Text>
         </children>
      </HBox>
      <AnchorPane layoutY="57.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="57.0">
         <children>
            <HBox alignment="CENTER" prefHeight="352.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <VBox alignment="CENTER" fillWidth="false" prefWidth="400.0" spacing="20.0">
                     <children>
                        <ChoiceBox fx:id="accountChoiceBox" prefWidth="300.0" styleClass="bank_acc" stylesheets="@../style/choice_box.css" />
                        <TextField fx:id="amountTF" alignment="CENTER" prefWidth="300.0" promptText="Введите сумму" />
                        <ComboBox fx:id="categoriesCB" prefWidth="300.0" promptText="Выбрать категорию трат" stylesheets="@../style/combo_box.css" />
                        <TextArea fx:id="descriptionTA" promptText="Добавьте описание" />
                        <Button fx:id="withdrawalBt" mnemonicParsing="false" onAction="#withdrawalBtOnClick" style="-fx-background-color: #390BB5;" stylesheets="@../style/button.css" text="Снять" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
