<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="root" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="code.controllers.AddBankAccountController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Добавление счёта">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Название банка" />
      <TextField fx:id="bankName" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Название счета" />
      <TextField fx:id="accName" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Баланс" />
      <TextField fx:id="balance" />
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="createBt" alignment="CENTER" mnemonicParsing="false" onAction="#createBtOnClick" stylesheets="@../style/button.css" text="Создать" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
