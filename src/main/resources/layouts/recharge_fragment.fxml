<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<VBox fx:id="root" alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="code.controllers.RechargeFragmentContent">
   <children>
      <HBox alignment="TOP_CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Пополнить счет">
               <font>
                  <Font size="36.0" />
               </font>
            </Text>
         </children>
      </HBox>
      <AnchorPane prefHeight="343.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="60.0">
                     <children>
                        <ChoiceBox fx:id="accountChoiceBox" prefWidth="300.0" styleClass="bank_acc" stylesheets="@../style/choice_box.css" />
                        <TextField fx:id="amountTF" alignment="CENTER" promptText="Введите сумму" />
                        <Button fx:id="replenishBt" mnemonicParsing="false" onAction="#replenishBtOnClick" style="-fx-background-color: #390BB5;" stylesheets="@../style/button.css" text="Пополнить" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </children>
</VBox>
